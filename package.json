{
    "name": "@ng/sample",
    "version": "0.0.0-placeholder",
    "description": "Angular sample",
    "module": "./dist/es5/index.js",
    "esm2015": "./dist/es2015/index.js",
    "esm5": "./dist/es5/index.js",
    "typings": "./src/sample.d.ts",
    "sideEffects": false,
    "scripts": {
        "build": "ngc && ngc -p tsconfig.es2015.json && ngc -p tsconfig.typings.json",
        "clean": "rimraf dist tests docs src/**/*.d.ts src/**/*.json",
        "clean:deps": "rimraf package-lock.json node_modules",
        "clean:all": "npm run clean && npm run clean:deps",
        "ngc": "ngc",
        "version:placeholder": "replace-in-file /\\\"version\\\":\\s\\\".*?\\\"/g \"\\\"version\\\": \\\"0.0.0-placeholder\\\"\" package.json --isRegex",
        "version:git": "ngv -e \"replace-in-file 0.0.0-placeholder $GIT_VERSION package.json\"",
        "prepublishOnly": "npm run bundle && npm run version:placeholder && npm run version:git",
        "postpublish": "npm run version:placeholder && npm run clean",
        "bundle": "npm run clean && npm run build && nnrh *.js -d dist/es5 --htmlDir src && nnrh *.js -d dist/es2015 --htmlDir src"
    },
    "keywords": [
        "angular",
        "ng",
        "sample"
    ],
    "author": "Marek Bukovsky <marek.bukovsky@asseco-ce.com>",
    "license": "ISC",
    "peerDependencies": {
        "@angular/core": ">=8.0.0-beta.8",
        "@angular/common": ">=8.0.0-beta.8",
        "@angular/forms": ">=8.0.0-beta.8",
        "rxjs": ">=6.4.0"
    },
    "devDependencies": {
        "@angular/core": "8.0.0-beta.8",
        "@angular/common": "8.0.0-beta.8",
        "@angular/forms": "8.0.0-beta.8",
        "rxjs": "^6.4.0",
        "@angular/router": "8.0.0-beta.8",
        "@angular/compiler-cli": "8.0.0-beta.8",
        "@angular/compiler": "8.0.0-beta.8",
        "@angular/language-service": "8.0.0-beta.8",
        "@angular/platform-browser-dynamic": "8.0.0-beta.8",
        "@angular/platform-browser": "8.0.0-beta.8",
        "rimraf": "2.6.3",
        "copyfiles": "2.1.0",
        "replace-in-file": "3.4.3",
        "typescript": "3.2.4",
        "npm-git-version": "1.1.0",
        "npm-ng-require-html": "1.0.2"
    }
}
